    "@mui/material": "^5.14.0",
    "@reduxjs/toolkit": "^1.9.0",
    "@tanstack/react-query": "^5.84.1",
    "@types/node": "^24.2.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.5.0",
    "date-fns": "^4.1.0",
    "phaser": "^3.70.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.0",
    "react-router-dom": "^6.30.1",
